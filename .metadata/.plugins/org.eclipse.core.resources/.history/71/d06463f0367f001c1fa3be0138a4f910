package cycu;

import java.util.Scanner;

public class 上課的東西 {
	public static void main(String[] args) {
		while (true) {
			System.out.println("請輸入你的年齡:"+"\t");
			Scanner scn = new Scanner(System.in);
			int age = scn.nextInt();

			if (age <= 15) {
				System.out.println("兒童票"+"\n");
			} else if (age <= 65) {
				System.out.println("全票"+"\n");

			} else {
				System.out.println("敬老票"+"\n");
			}
		}

	}

}
