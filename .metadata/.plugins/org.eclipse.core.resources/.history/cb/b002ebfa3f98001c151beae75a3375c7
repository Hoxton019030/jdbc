		Scanner scn = new Scanner(System.in);
		System.out.println("你要堆疊幾層?");
		int arraySize = buf.read();
		int arraysizescn = scn.nextInt();
		stackarray.creatStack(arraysizescn);
		System.out.println(stackarray.stack.length);
		
	}
}
