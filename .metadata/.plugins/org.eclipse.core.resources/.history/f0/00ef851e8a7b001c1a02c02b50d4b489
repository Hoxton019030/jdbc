public class hello
{
	public static void main(String[] args)
	{
		
		/*想做出一個可以紀錄骰子點數的東西*/
		int times   = 100;
		int[]record = new int[6];
		
		for(int i=0;i<times;i++) {
			int dice = (int) (Math.random()*5.99999);
			record[dice]++;
			
		}
		
		System.out.println("one :"  +record[0]);
		System.out.println("two :"  +record[1]);
		System.out.println("three :"+record[2]);
		System.out.println("four :" +record[3]);
		System.out.println("five :" +record[4]);
		System.out.println("six :"  +record[5]);

		
		
	}
}